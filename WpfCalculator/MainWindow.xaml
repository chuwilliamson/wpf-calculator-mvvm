<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WpfCalculator.ViewModel"
        mc:Ignorable="d"
        Title="Calculator" Height="350" Width="325"
                ResizeMode="NoResize"
>

    <!-- Set the DataContext to the CalculatorViewModel -->
    <Window.DataContext>
        <vm:CalculatorViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="162*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <!-- Define rows for input, result display, and buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- First Number Input -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Label Content="Number 1:" Width="70"/>
            <TextBox Width="59" Text="{Binding Number1, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Second Number Input -->
        <StackPanel Orientation="Horizontal" Margin="10,10,23,10" Grid.Column="1">
            <Label Content="Number 2:" Width="71"/>
            <TextBox Width="49" Text="{Binding Number2, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Result Display -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Label Content="Result:" Width="70"/>
            <TextBlock Width="150" Text="{Binding Result}" VerticalAlignment="Center" />
        </StackPanel>

        <!-- Operation Buttons (Add, Subtract, Multiply, Divide) -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="22,10,0,10" Grid.ColumnSpan="2" Width="280">
            <Button Content="Add" Command="{Binding AddCommand}" Width="60" Margin="5"/>
            <Button Content="Subtract" Command="{Binding SubtractCommand}" Width="60" Margin="5"/>
            <Button Content="Multiply" Command="{Binding MultiplyCommand}" Width="60" Margin="5"/>
            <Button Content="Divide" Command="{Binding DivideCommand}" Width="60" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
